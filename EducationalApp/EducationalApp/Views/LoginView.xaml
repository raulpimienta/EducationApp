<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationalApp.Views.LoginView"
             xmlns:viewmodels="clr-namespace:EducationalApp.ViewModels"
             x:DataType="viewmodels:LoginViewModel">
    <VerticalStackLayout Padding="30"
                      Spacing="20">

        <Image Source="course.png"
            HeightRequest="50"
            WidthRequest="50"
            HorizontalOptions="Center" />

        <Label Text="Login"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Frame CornerRadius="10"
            Padding="5"
            BorderColor="#ccc">
            <Entry  Placeholder="User"
                 TextColor="Black"
                 Text="{Binding UserName}"/>
        </Frame>

        <Frame CornerRadius="10"
            Padding="5"
            BorderColor="#ccc">
            <Entry Placeholder="Pass"
            IsPassword="True"
            TextColor="Black"
                Text="{Binding PassUser}"/>
        </Frame>

        <Button Text="Sign in"
             BackgroundColor="#007AFF"
             TextColor="White"
             Command="{Binding TapButtonSignInCommand}"/>

        <Button Text="Create user"
             BackgroundColor="#ffffff"
             TextColor="#007AFF"
             Command="{Binding TapButtonCreateUserCommand}" />

    </VerticalStackLayout>
</ContentPage>